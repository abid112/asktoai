# Application Mode
# Set to 'demo' for no-persist mode (URL-encoded prompts)
# Set to 'production' for Supabase-backed persistence
VITE_APP_MODE=demo

# Supabase Configuration (only needed for production mode)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Rate Limiting
VITE_RATE_LIMIT_MAX_REQUESTS=10
VITE_RATE_LIMIT_WINDOW_MS=900000

# Turnstile CAPTCHA (optional, for abuse protection)
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# Base URL (for production deployment)
VITE_BASE_URL=https://yourdomain.com

